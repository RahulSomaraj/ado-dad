{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testTimeout": 30000,
  "testRegex": ".e2e-spec.ts$",
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true,
  "setupFilesAfterEnv": ["<rootDir>/jest-e2e-setup.js"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "reporters": [
    "default",
    [
      "jest-html-reporter",
      {
        "pageTitle": "E2E Test Report",
        "outputPath": "./reports/e2e-test-report.html",
        "includeFailureMsg": true,
        "includeConsoleLog": true,
        "includeStackTrace": true
      }
    ],
    [
      "jest-junit",
      {
        "outputDirectory": "./reports",
        "outputName": "e2e-test-results.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": true
      }
    ],
    [
      "<rootDir>/jest-json-reporter.js",
      {
        "outputPath": "./reports/e2e-test-summary.json"
      }
    ]
  ],
  "globals": {
    "NODE_ENV": "test",
    "MONGODB_URI": "mongodb://localhost:27017/adodad_test",
    "REDIS_CONFIG": {
      "host": "localhost",
      "port": 6379,
      "db": 1,
      "keyPrefix": "adodad_test:"
    }
  }
}
